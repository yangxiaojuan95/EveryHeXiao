.uni-popup-z96 .uni-popup {
  z-index: 96;
}
.tabs {
  height: 90rpx;
  line-height: 90rpx;
  left: 0;
  right: 0;
  background-color: #fff;
  font-size: 32rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}
.tabs .tabs-item {
  height: 100%;
}
.tabs .tabs-item.active {
  font-weight: 500;
}
.tabs .tabs-item.active text {
  opacity: 1;
}
.active-bar {
  position: absolute;
  bottom: 10rpx;
  height: 6rpx;
  left: 0;
  right: 10rpx;
  border-radius: 2rpx;
  transition: left .15s, right .15s;
}

